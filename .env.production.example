# Production environment example for all-in-one stack (Hetzner)
# Copy to .env and adjust. Use scripts/gen_all_in_one_env.py then manually set domain + Cloudflare token.

# Base
BASE_DOMAIN=opendiscourse.net
ACME_EMAIL=admin@opendiscourse.net
CLOUDFLARE_API_TOKEN=change_me_cloudflare

# Public hostnames
N8N_HOSTNAME=n8n.${BASE_DOMAIN}
FLOWISE_HOSTNAME=flowise.${BASE_DOMAIN}
WEBUI_HOSTNAME=webui.${BASE_DOMAIN}
PORTAL_HOSTNAME=portal.${BASE_DOMAIN}
SEARXNG_HOSTNAME=search.${BASE_DOMAIN}
SUPABASE_HOSTNAME=api.${BASE_DOMAIN}
SUPABASE_STUDIO_HOSTNAME=studio.${BASE_DOMAIN}
LANGFUSE_HOSTNAME=lang.${BASE_DOMAIN}
OLLAMA_HOSTNAME=ollama.${BASE_DOMAIN}
NEO4J_HOSTNAME=graph.${BASE_DOMAIN}
TRAEFIK_DASHBOARD_HOST=infra.${BASE_DOMAIN}

# Core secrets (auto-generated if left change_me and using generator)
POSTGRES_PASSWORD=change_me_pg
SUPABASE_DB_PASSWORD=change_me_supabase_db
JWT_SECRET=change_me_jwt
ANON_KEY=change_me_anon
SERVICE_ROLE_KEY=change_me_service
SECRET_KEY_BASE=change_me_secret_key_base
VAULT_ENC_KEY=change_me_vault_enc_key
LOGFLARE_PUBLIC_ACCESS_TOKEN=change_me_logflare_public
LOGFLARE_PRIVATE_ACCESS_TOKEN=change_me_logflare_private

# n8n
N8N_ENCRYPTION_KEY=change_me_n8n_enc
N8N_USER_MANAGEMENT_JWT_SECRET=change_me_n8n_user_jwt

# Langfuse
CLICKHOUSE_PASSWORD=change_me_clickhouse
MINIO_ROOT_PASSWORD=change_me_minio
LANGFUSE_SALT=change_me_lfs_salt
ENCRYPTION_KEY=change_me_lfs_enc
NEXTAUTH_SECRET=change_me_nextauth

# Flowise basic auth
FLOWISE_USERNAME=admin
FLOWISE_PASSWORD=change_me_flowise

# Neo4j
NEO4J_AUTH=neo4j/change_me_neo4j

# Optional performance / tuning placeholders
# POOLER_DEFAULT_POOL_SIZE=20
# POOLER_MAX_CLIENT_CONN=100

